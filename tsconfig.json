{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "baseUrl": ".",
  },
  "include": [
    "src/**/*.ts",
    "__tests__/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
